    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:elevation="0dp"
        android:orientation="horizontal"
        android:visibility="visible"
        tools:background="@color/top_title_bar">

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="serif"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textSize="@dimen/activity_main_title_size"
            android:textStyle="italic"
            android:visibility="visible"
            tools:background="@color/top_title_bar"
            tools:text="@string/top_title_name"
            tools:textColor="@color/font_top_title_bar"
            tools:textSize="36sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/bg_activity_main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="54dp"
            android:background="@color/hr_activity_main"
            android:visibility="visible"
            android:id="@+id/linearLayout">

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="12dp"
            android:adjustViewBounds="false"
            app:srcCompat="@drawable/geo_tag" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            app:srcCompat="@drawable/heart" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="-43dp"
            android:layout_marginRight="32dp"
            app:srcCompat="@drawable/gear" />

    </RelativeLayout>


</LinearLayout>



